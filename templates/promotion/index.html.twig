{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="text-center">All Promotions</h3>
    <table class="table table-bordered">
        <thead>
        <th>Id</th>
        <th>Discount</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Genre</th>
        <th>Edit</th>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.discount }}</td>
                <td>{{ promotion.startDate|date('m-d-Y') }}</td>
                <td>{{ promotion.endDate|date('m-d-Y')}}</td>
                <td>{{ promotion.genre }}</td>
                <td><a href="{{ path('edit_promotion', {id: promotion.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-info btn-right" href="{{ path('add_promotion') }}">Add</a>
    <a class="btn btn-danger" href="{{ path('country_delete', {'id' : country.id })}}"
                    onclick="return confirm('Do you want to delete this promotion ?');"
                    >DELETE</a>
{% endblock %}
